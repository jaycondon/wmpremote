                android:hint="@string/Lunch" />

            <TextView
                android:id="@+id/Saturday_Dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:hint="@string/Dinner" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>